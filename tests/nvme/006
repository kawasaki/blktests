# Test NVMeOF target creation.

. tests/nvme/rc

DESCRIPTION="create an NVMeOF target"
QUICK=1

requires() {
	_nvme_requires
	_have_loop
	_require_nvme_trtype_is_fabrics
}

set_conditions() {
	_set_nvme_trtype_and_nvmet_blkdev_type "$@"
}

test() {
	echo "Running ${TEST_NAME}"

	_setup_nvmet

	_nvmet_target_setup

	_nvmet_target_cleanup

	echo "Test complete"
}
